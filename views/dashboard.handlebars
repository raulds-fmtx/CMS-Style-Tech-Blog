{{!-- Navigation --}}
{{> header}}

<button id="add-post-btn">Add New Post</button>

{{#if posts.length}}
  {{#each posts}}
    <div class="post">
      <h2>{{this.title}}</h2>
      <p>{{this.createdAt}}</p>
      <button class="edit-post-btn" data-id="{{this.id}}">Edit</button>
      <button class="delete-post-btn" data-id="{{this.id}}">Delete</button>
    </div>
  {{/each}}
{{else}}
  <p>No posts yet</p>
{{/if}}

{{> footer}}
<script src="../public/js/addPost.js"></script>
<script src="../public/js/editPost.js"></script>
<script src="../public/js/deletePost.js"></script>
